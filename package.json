  "version": "1.0.0",
  "main": "dist/vue-qrcode.common.js",
  "module": "dist/vue-qrcode.esm.js",
  "unpkg": "dist/vue-qrcode.js",
  "repository": "xkeshi/vue-qrcode",
  "homepage": "https://xkeshi.github.io/vue-qrcode",
  "license": "MIT",
