  ],
  "keywords": [
    "qrcode",
    "vue",
    "component",
    "vue-component",
    "html",
    "css",
    "javascript",
    "front-end",
    "web",
    "development"
  ],
  "scripts": {
    "build": "rollup -c",
    "clear": "del-cli dist",
